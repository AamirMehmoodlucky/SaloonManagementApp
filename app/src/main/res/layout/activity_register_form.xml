<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="@color/black"
    tools:context=".registeration.RegisterForm">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pick"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Logo/Shop Image"
        android:textColor="@color/golden"
        android:textSize="10sp"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
           android:id="@+id/shopName"
            android:layout_height="wrap_content"
            android:hint="Enter Shop Name"
            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ownerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Owner name"
            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No"
            android:inputType="number"
            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business Address"

            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerInParent="true"
            android:background="@drawable/border"
            android:backgroundTint="@color/golden"
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="50dp"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:backgroundTint="@color/golden"
                android:overlapAnchor="false"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/businessAdress"
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:hint="Choose Business Location"
            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/black"
        android:backgroundTint="@color/golden"
        android:layout_marginTop="12dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="10dp"
        />



</androidx.appcompat.widget.LinearLayoutCompat>