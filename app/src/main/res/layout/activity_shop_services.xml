<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="@color/black"
    android:fitsSystemWindows="true">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/idservice_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/icon_service"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/golden"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Image"
        android:textColor="@color/golden"
        android:textSize="10sp"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
            android:id="@+id/idservicetitle"
            android:layout_height="wrap_content"
            android:hint="Service Title"
            android:maxLines="1"
            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idpricepefrusr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price per User"
            android:maxLines="1"
            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_margin="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/golden"
        app:hintTextColor="@color/golden"
        android:textColorHint="@color/golden"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description of Service"
            android:maxLines="4"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/ffmobileno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Availbility : "
            android:inputType="number"
            android:textCursorDrawable="@color/golden"
            android:textColorHint="@color/golden"
            android:textColor="@color/golden"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:layout_above="@+id/view_below" >

            <RadioButton
                android:id="@+id/idradioYes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:buttonTint="@color/golden"
                android:textColor="@color/golden"/>

            <RadioButton
                android:id="@+id/idradioNo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:buttonTint="@color/golden"
                android:text="No"
                android:textColor="@color/golden"/>
        </RadioGroup>
    </androidx.appcompat.widget.LinearLayoutCompat>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/idAddServic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Service"
        android:textColor="@color/black"
        android:backgroundTint="@color/golden"
        android:layout_marginTop="12dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="10dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:indeterminateTint="@color/golden"/>



</androidx.appcompat.widget.LinearLayoutCompat>