<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".registeration.SelectionMode">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Only for Admin Use"
        android:textStyle="italic|bold"
        android:textColor="@color/golden"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginBottom="40dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPendingShops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Shopes"
        android:textColor="@color/black"
        android:backgroundTint="@color/golden"
        android:drawableRight="@drawable/arrowright"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="10dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/idApprovedShops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approved Shopes"
        android:drawableRight="@drawable/arrowright"
        android:textColor="@color/black"
        android:backgroundTint="@color/golden"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="10dp"
        android:layout_marginTop="40dp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>