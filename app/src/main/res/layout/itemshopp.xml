<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/id_name"
            android:text="  Name:"
            android:textSize="20sp"
            android:drawableLeft="@drawable/icon_person"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/id_dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icon_person"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/golden"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_weight="4">
        <TextView
            android:id="@+id/id_shopname"
            android:text="  Shop Name:"
            android:drawableLeft="@drawable/icon_shopname"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/idemailuser"
            android:text="  Email:"
            android:drawableLeft="@drawable/icon_email"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/idmobileno"
            android:text="  Mobile:"
            android:drawableLeft="@drawable/icon_mobile"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/idcity"
            android:text="  city:"
            android:drawableLeft="@drawable/icon_city"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/idadres"
            android:text="Adress:"
            android:drawableLeft="@drawable/icon_city"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/idmapadress"
            android:text="  Map Adress:"
            android:drawableLeft="@drawable/locationiconyellow"
            android:maxLines="3"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Status:"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>
        <TextView
            android:id="@+id/idstatuss"
            android:text="Pending"
            android:textColor="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"/>
        <TextView
            android:id="@+id/idtrack"
            android:text="Track me"
            android:drawableLeft="@drawable/locationicon"
            android:drawableRight="@drawable/arrowright"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/idbtnApproveShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approve this Shop"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginTop="12dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="10dp"
        android:layout_marginBottom="5dp"
        />



</androidx.appcompat.widget.LinearLayoutCompat>