<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    android:weightSum="10"
    android:orientation="vertical"
    tools:openDrawer="start">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="5"
        android:orientation="horizontal"
        android:background="@color/black">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:layout_marginStart="15dp"
            android:text="Custmer Dashboard"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:textSize="16sp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_person"
            android:layout_marginTop="7dp"/>

    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select City for Service"
            android:textColor="@color/golden"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerInParent="true"
            android:background="@drawable/border"
            android:backgroundTint="@color/golden"
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="50dp"
            tools:ignore="UselessParent">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:backgroundTint="@color/golden"
                android:overlapAnchor="false"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearchShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Serch"
        android:drawableRight="@drawable/icon_search"
        android:textColor="@color/black"
        android:backgroundTint="@color/golden"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="10dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/idmyorderlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/orderlist"
        android:textColor="@color/golden"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="14sp"/>


</androidx.appcompat.widget.LinearLayoutCompat>